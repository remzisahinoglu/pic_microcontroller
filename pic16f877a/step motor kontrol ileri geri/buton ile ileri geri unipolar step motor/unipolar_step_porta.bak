//unipolar step motor belirlenen kadar adým ileri geri kontrol uygulamasý
// problem: step motor ýsýnýyor
// çözüm: step motor time_on ve time_off sürelerinin ayarlanmasý

//18.03.2011
//yazan = Remzi ÞAHÝNOÐLU

#if defined (__PCM__)
#include <16F628A.h>
#use delay(clock=4000000)
#fuses NOWDT,PUT,NOLVP,NOBROWNOUT,NOMCLR,INTRC_IO,NOPROTECT
#endif

//#device PIC16F628A
char i=0;
int16 a=0;


void main()
{  
   set_tris_a(0x00);
   set_tris_b(0x00);
   
   delay_ms(2000);
   while(TRUE) 
   {
      output_b(0b00010000);      

      i=i+1;                  // adým sayacý
      if(i==5){i=1;}
      a=a+1;
      switch (i)                 
      {                          
         case 1: output_a(0b00000001);   break;   // aþama 1
         case 2: output_a(0b00000010);   break;   // aþama 2
         case 3: output_a(0b00000100);   break;   // aþama 3
         case 4: output_a(0b00001000);   break;   // aþama 4
      }
      delay_ms(4);            
     
   }
}
