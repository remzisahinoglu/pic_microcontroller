#if defined (__PCM__)
#include <16F877.h>
#fuses XT,NOWDT,NOPROTECT,NOLVP,NOBROWNOUT,NOPUT,NOWRT,NODEBUG,NOCPD
#use delay(clock=4000000)

#use rs232(baud=1200, xmit=pin_C6, rcv=pin_C7, parity=N, stop=1)
#endif

#byte porta = 0x05

void main()
{
   
   set_tris_a(0b00000001);
   delay_ms(500);
   output_d(0);
   
   while(TRUE)
   {
      if(bit_test(porta,0)==0){putc('A');}          
      delay_ms(100);
   }
}

