int bilgi=0;

void main()              
{
   setup_psp(PSP_DISABLED);
   setup_spi(SPI_SS_DISABLED);
   setup_timer_1(T1_DISABLED);
   setup_timer_2(T2_DISABLED,0,1);
   setup_CCP1(CCP_OFF);
   setup_CCP2(CCP_OFF);
   
   set_tris_a(0x01);
   set_tris_b(0x00);
   set_tris_c(0x00);
   set_tris_d(0x00);
   set_tris_e(0x00);
   
   output_c(0x00);
   output_d(0x00);
   
   setup_adc(adc_clock_div_32);     // adc clock frenkansý fosc/32
   setup_adc_ports(ALL_ANALOG);
   
   //enable_interrupts(INT_AD);
   enable_interrupts(GLOBAL);
   
   delay_ms(1000);
      
   while(TRUE)
   {
      set_adc_channel(0);
      delay_us(10);
      
      bilgi = read_adc();
      
      putc(bilgi);

      delay_ms(500);
   }
}
