SYMBOL  LED_1=PORTC.0
SYMBOL  LED_2=PORTC.1
SYMBOL  LED_3=PORTC.2
SYMBOL  LED_4=PORTD.0
SYMBOL  LED_5=PORTD.1
SYMBOL  LED_6=PORTD.2
SYMBOL  LED_7=PORTD.3
SYMBOL  LCD_BACKLIGHT=PORTD.7

HIGH LCD_BACKLIGHT
LCDOUT $FE,1                        'Lcd ekran temizlendi
LCDOUT $FE,$83,"LED ON/OFF"     
LCDOUT $FE,$C3,"UYGULAMASI"   
BASLA:
HIGH LED_1
PAUSE 200
HIGH LED_2
PAUSE 200
HIGH LED_3
PAUSE 200
HIGH LED_4
PAUSE 200
HIGH LED_5
PAUSE 200
HIGH LED_6
PAUSE 200
HIGH LED_7
PAUSE 200
LOW LED_1
PAUSE 200
LOW LED_2
PAUSE 200
LOW LED_3
PAUSE 200
LOW LED_4
PAUSE 200
LOW LED_5
PAUSE 200
LOW LED_6
PAUSE 200
LOW LED_7
PAUSE 200
GOTO BASLA
    
end
