clear
DEFINE RESET_ORG 1000h        ' Kullanýcý programý için Reset vektörü
DEFINE OSC 48                 ' Kristal tanýmý
PORTA=0:PORTB=0:PORTC=0:PORTD=0:PORTE=0
TRISA=%00111111    'PortA giriþ
TRISB=%00000000    'PortB tamamen çýkýþ 
TRISC=%11111000    'PortC tamamne giriþ
TRISD=%00000000    'PortD tamamen çýkýþ
TRISE=%00000111    'PortE tamamen çýkýþ
DEFINE LCD_DREG		PORTB	'LCD data bacaklarý hangi porta baðlý?
DEFINE LCD_DBIT		0		'LCD data bacaklarý hangi bitten baþlýyor?
DEFINE LCD_EREG		PORTB	'LCD Enable Bacaðý Hangi Porta baðlý?
DEFINE LCD_EBIT		4		'LCD Enable Bacaðý Hangi bite baðlý ?
DEFINE LCD_RSREG	PORTB	'LCD RS Bacaðý Hangi Porta baðlý ?
DEFINE LCD_RSBIT	5		'LCD RS bacaðý Hangi Bite baðlý  ?
